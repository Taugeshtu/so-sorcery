{
  "name": "sorcery",
  "displayName": "Sorcery",
  "description": "Bring LLMs into your workspace, control the context, do useful work",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "sorcery.newContext",
        "title": "Sorcery: New Context File"
      }
    ],
    "customEditors": [
      {
        "viewType": "sorcery.contextEditor",
        "displayName": "Sorcery Context Editor",
        "selector": [
          { "filenamePattern": "*.sorcery" }
        ]
      }
    ],
    "configuration": {
      "title": "Sorcery",
      "properties": {
        "sorcery.openAIApiKey": {
          "type": "string",
          "description": "OpenAI API key (e.g. starts with sk-â€¦)",
          "default": ""
        },
        "sorcery.claudeApiKey": {
          "type": "string",
          "description": "Anthropic Claude API key",
          "default": ""
        },
        "sorcery.includeFileExtensions": {
          "type": "array",
          "description": "White-list of file extensions",
          "items": { "type": "string" },
          "default": [".cs", ".txt", ".md", ".shader", ".compute", ".hlsl", ".glsl", ".c", ".cpp", ".h", ".hpp", ".ts", ".js", ".css"]
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.100.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}
